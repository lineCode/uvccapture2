set(APP_VERSION "@APP_VERSION@")
set(CPACK_CMAKE_GENERATOR "@CMAKE_GENERATOR@")
set(CPACK_OUTPUT_FILE_PREFIX packages)
set(CPACK_INSTALL_CMAKE_PROJECTS "@PROJECT_BINARY_DIR@;uvccapture2;ALL;/")
set(CPACK_PACKAGE_DESCRIPTION_SUMMARY "simple application for capturing images from an USB webcam on Linux")
set(CPACK_PACKAGE_DESCRIPTION_FILE @CMAKE_SOURCE_DIR@/cmake/PackageDescription.txt)
set(CPACK_PACKAGING_INSTALL_PREFIX @CPACK_PACKAGING_INSTALL_PREFIX@)
set(CPACK_PACKAGE_NAME "uvccapture2")
set(CPACK_PACKAGE_VERSION "${APP_VERSION}")

set(CPACK_DEBIAN_COMPRESSION_TYPE "xz")
set(CPACK_DEBIAN_PACKAGE_SECTION "image")
set(CPACK_DEBIAN_PACKAGE_MAINTAINER "Konstantin Sorokin <kvs@sigterm.ru>")
set(CPACK_DEBIAN_PACKAGE_ARCHITECTURE @CPACK_DEBIAN_PACKAGE_ARCHITECTURE@)
set(CPACK_PACKAGE_FILE_NAME ${CPACK_PACKAGE_NAME}-${APP_VERSION}-${CPACK_DEBIAN_PACKAGE_ARCHITECTURE})
